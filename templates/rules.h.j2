#ifndef RULES_H
#define RULES_H

#include "definitions.h"

#ifndef MAX_L_NAME
#error "MAX_L_NAME not defined: check definitions.h"
#endif

#ifndef N_INPUT
#error "N_INPUT not defined: check definitions.h"
#endif

#ifndef N_OUTPUT
#error "N_OUTPUT not defined: check definitions.h"
#endif

//! IF AND THEN STATEMENTS
typedef struct {
	char name[MAX_L_NAME];		//!< Name of the variable
	char mf[MAX_L_NAME];		//!< Member function of the variable
} ruleStatement;

//! RULE
typedef struct {
	ruleStatement ifRules[N_INPUT];		//!< Vector of "if statements"
	int nIfRules;						//!< Number of "if statements"

	double thenValue;					//!< Value of correctness of the rule

	ruleStatement thenRules[N_OUTPUT];	//!< Vector of "then statements"
	int nThenRules;						//!< Number of "then statements"
} rule;

//! RULE AFTER FINDING THE INDICES OF THE INPUTS AND MEMBERSHIP FUNCTIONS OF THE FUZZY LOGIC
typedef struct {
	int ifRulesIndex[N_INPUT];			//!< Vector of the indices of "if statements"
	int ifRulesMFIndex[N_INPUT];		//!< Vector of the indices of the mf of the "if statements"
	int nIfRules;						//!< Number of "if statements"

	double thenValue;					//!< Value of correctness of the rule

	int thenRulesIndex[N_OUTPUT];		//!< Vector of the indices of the "then statements"
	int thenRulesMFIndex[N_OUTPUT];		//!< Vector of the indices of the mf of the "then statements"
	int nThenRules;						//!< Number of "then statements"
} builtRule;

#endif
